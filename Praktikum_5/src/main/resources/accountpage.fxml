<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ui.AccountPageController" spacing="10" alignment="CENTER">
    <Label fx:id="accountNameLabel"/>
    <Label fx:id="balanceLabel"/>
    <ListView fx:id="transactionListView"/>
    <HBox spacing="10">
        <Button text="Back" onAction="#onBack"/>
        <Button text="Add Transaction" onAction="#onAddTransaction"/>
        <Button text="Sort Ascending" onAction="#onSortAscending"/>
        <Button text="Sort Descending" onAction="#onSortDescending"/>
        <Button text="Show Positive" onAction="#onShowPositive"/>
        <Button text="Show Negative" onAction="#onShowNegative"/>
    </HBox>
</VBox>
